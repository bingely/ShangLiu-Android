<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_17"
                android:paddingRight="@dimen/space_17"
                android:paddingTop="@dimen/space_10"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李XX"
                android:textColor="@color/tv_color_black"
                android:textSize="@dimen/text_size_16"/>

            <ImageView
                android:id="@+id/tv_customer_sex"
                android:layout_width="28dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/space_7"
                android:text="女"/>

            <ImageView
                android:id="@+id/tv_customer_rank"
                android:layout_width="28dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/space_7"
                android:text="B级"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ramain_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_7"
            android:text="剩下2天"
            android:textColor="#8b8b8b"
            android:textSize="@dimen/text_size_15"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下次跟进时间:"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tv_followTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2016-01-22 10:22"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/text_size_15"/>
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/call_btn_tel_nor"/>

</RelativeLayout>
